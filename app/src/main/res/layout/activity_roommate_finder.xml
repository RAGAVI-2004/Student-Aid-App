<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:padding="16dp">
    <EditText android:id="@+id/etRoomType" android:hint="Room Type (e.g., 2BHK, Hostel)" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <EditText android:id="@+id/etMembersNeeded" android:hint="Members Needed" android:inputType="number" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <EditText android:id="@+id/etContactEmail" android:hint="Contact Email" android:inputType="textEmailAddress" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <EditText android:id="@+id/etDescription" android:hint="Additional Info" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnPostRequest" android:text="Post Request" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnViewRequests" android:text="View Requests" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>