<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Welcome Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#43A047">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/tvWelcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome, Teacher!"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manage class materials and help students"
                    android:textSize="14sp"
                    android:textColor="#E8F5E9"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Upload Study Materials Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardStudyMaterials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@android:drawable/ic_menu_upload"
                    app:tint="#1E88E5"
                    android:layout_marginEnd="20dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload Study Materials"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Share class notes and materials with students"
                        android:textSize="13sp"
                        android:textColor="#757575"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@android:drawable/ic_menu_send"
                    app:tint="#1E88E5"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Lost & Found Card (Combined Report + View) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardLostFound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@android:drawable/ic_menu_search"
                    app:tint="#E53935"
                    android:layout_marginEnd="20dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lost &amp; Found"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Report found items and view all lost &amp; found items"
                        android:textSize="13sp"
                        android:textColor="#757575"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@android:drawable/ic_menu_send"
                    app:tint="#E53935"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Student Guidance Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardGuidance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@android:drawable/ic_dialog_info"
                    app:tint="#FF9800"
                    android:layout_marginEnd="20dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Student Guidance"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#212121"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Provide guidance and mentorship to students"
                        android:textSize="13sp"
                        android:textColor="#757575"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@android:drawable/ic_menu_send"
                    app:tint="#FF9800"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- âœ… LOGOUT BUTTON -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Logout"
            android:textSize="16sp"
            android:textStyle="bold"
            android:drawableLeft="@android:drawable/ic_lock_power_off"
            android:drawablePadding="12dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            app:cornerRadius="8dp"
            app:backgroundTint="#D32F2F"
            android:textColor="#FFFFFF"
            style="@style/Widget.MaterialComponents.Button"/>

    </LinearLayout>
</ScrollView>
