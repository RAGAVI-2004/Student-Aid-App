<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Light Blue Background for Teacher -->
    <solid android:color="#E3F2FD"/>

    <!-- Dark Blue Border -->
    <stroke
        android:width="1dp"
        android:color="#1976D2"/>

    <!-- Rounded Corners -->
    <corners
        android:radius="12dp"
        android:topLeftRadius="2dp"/>

    <padding
        android:left="12dp"
        android:right="12dp"
        android:top="8dp"
        android:bottom="8dp"/>
</shape>
