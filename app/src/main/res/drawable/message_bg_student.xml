<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Light Green Background for Student -->
    <solid android:color="#E8F5E9"/>

    <!-- Dark Green Border -->
    <stroke
        android:width="1dp"
        android:color="#4CAF50"/>

    <!-- Rounded Corners -->
    <corners
        android:radius="12dp"
        android:topRightRadius="2dp"/>

    <padding
        android:left="12dp"
        android:right="12dp"
        android:top="8dp"
        android:bottom="8dp"/>
</shape>
